@model IEnumerable<DealDouble.Entities.Auction>
@{
    ViewBag.Title = "Auctions";
}



<div class="row">
    <div class="col-lg-12" id="listingArea">
        <h2>Auctions</h2>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Actual Price</th>
                    <th>Starting Time</th>
                    <th>Ending Time</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var auction in Model)
                {
                    <tr>
                        <td>@auction.Title</td>
                        <td>@auction.Description</td>
                        <td>@auction.ActualAmount</td>
                        <td>@auction.StartingTime.ToShortDateString()</td>
                        <td>@auction.EndTime.ToShortDateString()</td>
                        <td>
                            <button data-id="@auction.ID" class="editButton btn btn-info">Edit</button>
                            <button data-id="@auction.ID" class="deleteButton btn btn-danger">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div>
            <button class="btn btn-success" id="createButton">Create new auction</button>
        </div>

        <div id="actionArea">

        </div>

    </div>
</div>

<script src="~/Scripts/ControllerScripts/Auctions.js"></script>