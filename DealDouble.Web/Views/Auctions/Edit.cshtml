@model DealDouble.Entities.Auction
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post">
    <input name="ID" hidden value="@Model.ID"/>
    <label>Title</label>
    <input type="text" name="Title" value="@Model.Title"/>
    <br />
    <label>Picture</label>
    <input type="text" name="PictureURL" value="@Model.PictureURL"/>
    <br />
    <label>Description</label>
    <input type="text" name="Description" value="@Model.Description"/>
    <br />
    <label>ActualAmount</label>
    <input type="number" name="ActualAmount" value="@Model.ActualAmount"/>
    <br />
    <label>StartingTime</label>
    <input type="text" name="StartingTime" value="@Model.StartingTime"/>
    <br />
    <label>EndTime</label>
    <input type="text" name="EndTime" value="@Model.EndTime"/>
    <br />
    <button>Save</button>
</form>