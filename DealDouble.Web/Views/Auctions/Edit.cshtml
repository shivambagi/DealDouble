        var picsData = new FormData();

        for (var i = 0; i < pictures.length; i++) {
            picsData.append("Pictures", pictures[i]);
        }

        $.ajax({
            url: '@Url.Action("UploadPictures", "Shared")',
            type: 'Post',
            data: picsData,
            dataType: 'json',
            processData: false,
            contentType: false
        }).done(function (responses) {
            debugger;
